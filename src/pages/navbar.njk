{% import "component/sidebar.njk" as sidebar %}

{% extends "layouts/app.njk" %}

{% block title %} Navbar {% endblock %}

{% block sidebar %}
  {{ sidebar.sidebar(active='navbar', menus = menus) }}
{% endblock %}

{% block content %}
  <div class="main-header">
    <h1 class="h2 main-title">Navbar</h1>
    <p class="main-subtitle">Guide to creating navbar</p>
  </div>

   <div class="card mb-4">
     <div class="card-header">
       <h2 class="h6">Multiple Color</h2>
     </div>
     <div class="card-body">
      <button class="button border text-gray-800 mr-2 toggle-navbar" data-toggle="white">Navbar White</button>
      <button class="button button-black toggle-navbar" data-toggle="black">Navbar Black</button>
     </div>
   </div>
{% endblock %}

{% block js %}
<script>
  const toggleNavbars = document.querySelectorAll('.toggle-navbar')

  const toggleClass = function () {
    const navbarClass = document.querySelector('.navbar').classList

    if (this.dataset.toggle === 'white') {
      navbarClass.remove('navbar-dark')
    } else {
      navbarClass.add('navbar-dark')
    }
  }

  toggleNavbars.forEach(toggleNavbar => {
    toggleNavbar.onclick = toggleClass
  })
</script>
{% endblock %}