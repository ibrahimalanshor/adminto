{% extends "layouts/auth.njk" %}

{% block title %} Register {% endblock %}

{% block content %}
  <div class="auth-box">
    <div class="card">
      <div class="card-header">
        <h1 class="h4">Register</h1>
      </div>
      <div class="card-body">
        <div class="form">
          <label>Name</label>
          <input type="text" class="input" placeholder="Name">
        </div>
        <div class="form">
          <label>Email</label>
          <input type="email" class="input" placeholder="Email">
        </div>
        <div class="form">
          <label>Password</label>
          <input type="password" class="input" placeholder="Password">
        </div>
        <button class="button button-blue w-full mb-2">Register</button>
        <a href="login.html" class="link">Already have account? Login Here</a>
      </div>
    </div>
  </div>
{% endblock %}